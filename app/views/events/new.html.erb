<div class="container">
  <h1>Events#new</h1>
  <p>Find me in app/views/events/new.html.erb</p>
  <%= simple_form_for @event, url: events_path, method: :post do |f| %>
    <%= f.input :name %>
    <%= f.input :city %>
    <%= f.input :institution %>
    <% Event::CATEGORIES.each do |categ| %>
      <%= f.label categ %>
      <%= f.check_box :category, collection: categ %>
    <% end %>
    <%= f.input :date, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year - 12, discard_day: true,
                              order: [:month, :year]  %>
    <%= f.submit %>
  <% end %>   
</div>

