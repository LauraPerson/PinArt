<div class="container">
  <h1>Artworks#index</h1>
  <p>Find me in app/views/artworks/index.html.erb</p>
  <% @artworks.each do |artwork| %>
    <div class="m-2 p-2">
      <% if artwork.photo.attached? %>
        <%= image_tag artwork.photo %>
      <% end %>
      <p><%= artwork.name %></p>
      <p><%= artwork.artist %></p>
      <p><%= artwork.category %></p>
      <% if artwork.event_artwork %>
        <p><%= artwork.event_artwork.event.name %></p>
      <% end %>
      <% artwork.tag_list.each do |tag| %>
        <a href="" class="tags">#<%= tag %></a>
      <% end %>
    </div>
  <% end %>

</div>
